<configs>
<!-- Add more plants to biomes -->
<insertAfter xpath="/worldgeneration/biomes/biome[@name='pine_forest']/subbiome/decorations/decoration[@name='deco_iron_vein']" >
	<decoration type="block" blockname="plantedRicePOI" prob=".003" rotatemax="3"/>
</insertAfter>
<!-- Add more blocks to biomes -->
<insertAfter xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[@blockname='cntBirdnest']" >
	<decoration type="block" blockname="eventSignLetter_3" prob="0.00002" rotatemax="3"/>
	<decoration type="block" blockname="eventSignLetter_9" prob="0.00002" rotatemax="3"/>
	<decoration type="block" blockname="eventSignLetter_d" prob="0.00002" rotatemax="3"/>
	<decoration type="block" blockname="eventSignLetter_a" prob="0.00002" rotatemax="3"/>
	<decoration type="block" blockname="eventSignLetter_y" prob="0.00002" rotatemax="3"/>
	<decoration type="block" blockname="eventSignLetter_s" prob="0.00002" rotatemax="3"/>
</insertAfter>
<!-- Less Grass and trees -->
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[@blockname='treeBrownGrassDiagonal']/@prob">.001</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[@blockname='treeTallGrassDiagonal']/@prob">.02</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[@blockname='treeSnowyGrassDiagonal']/@prob">.001</set>

<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeWinter')]/@prob">0.00001</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeMountain')]/@prob">0.00003</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeOak')]/@prob">0.00001</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeJuniper')]/@prob">0.00001</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeDead')]/@prob">0.0001</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeCactus')]/@prob">0.00004</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treePineBurnt')]/@prob">0.0003</set>
<set xpath="/worldgeneration/biomes/biome/subbiome/decorations/decoration[contains(@blockname, 'treeBurnt')]/@prob">0.00003</set>

<!-- Remove ores from biomes snow,forest, desert, wasteland -->
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/layers/layer/resource[@blockname='terrOreIron']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/layers/layer/resource[@blockname='terrOreCoal']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/layers/layer/resource[@blockname='terrOrePotassiumNitrate']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/layers/layer/resource[@blockname='terrOreLead']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/layers/layer/resource[@blockname='terrOreOilDeposit']"/>

<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/decorations/decoration[@type='prefab' and @name='deco_iron_vein']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/decorations/decoration[@type='prefab' and @name='deco_coal_vein']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/decorations/decoration[@type='prefab' and @name='deco_nitrate_vein']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/decorations/decoration[@type='prefab' and @name='deco_lead_vein']"/>
<remove xpath="/worldgeneration/biomes/biome[not(contains(@name,'burnt_forest'))]/subbiome/decorations/decoration[@type='prefab' and @name='deco_shale_vein']"/>

<append xpath="/worldgeneration/biomes/biome[@name='burnt_forest']">
		<subbiome prob="0.402">
			<layers>
				<layer depth="1" blockname="terrBurntForestGround"/> <layer depth="3" blockname="terrDirt"/>
				<layer depth="1" blockname="terrStone"> <resource blockname="terrGravel" prob="0.7830" rwgGenerationType="all"/> </layer>
				<layer depth="*" blockname="terrStone"> <resource blockname="terrOreOilDeposit" prob="0.6500" rwgGenerationType="all"/> <resource blockname="terrGravel" prob="0.7830" rwgGenerationType="all"/> </layer> <layer depth="3" blockname="terrBedrock"/>
			</layers>
			<decorations>
				<decoration type="prefab" name="deco_shale_vein" checkresource="-7" onslopes="true" prob=".00657" rotatemax="3"/>
				<decoration type="block" blockname="rockResource" prob=".00033" rotatemax="3"/>
				<decoration type="block" blockname="rockResource02" prob=".00033" rotatemax="3"/>
				<decoration type="block" blockname="cntBurntForestRandomLootHelper" prob="0.00025"/>
				<decoration type="block" blockname="rock01" prob=".005" rotatemax="3"/>
				<decoration type="block" blockname="rock02" prob=".005" rotatemax="3"/>
				<decoration type="block" blockname="rock04" prob=".005" rotatemax="3"/>
				<decoration type="block" blockname="cntBirdnest" prob="0.001"/>
				<decoration type="block" blockname="treePineBurntLrg" prob="0.03" rotatemax="7"/>
				<decoration type="block" blockname="treePineBurntMed" prob="0.03" rotatemax="7"/>
				<decoration type="block" blockname="treePineBurntFullMed" prob="0.03" rotatemax="7"/>
				<decoration type="block" blockname="treeBurntMaple01" prob="0.003" rotatemax="7"/>
				<decoration type="block" blockname="treeBurntMaple02" prob="0.003" rotatemax="7"/>
				<decoration type="block" blockname="treeBurntMaple03" prob="0.003" rotatemax="3"/>
				<decoration type="block" blockname="treeDeadPineLeaf" prob="0.001" rotatemax="7"/>
				<decoration type="block" blockname="treeDeadTree01" prob="0.002" rotatemax="7"/>
				<decoration type="block" blockname="treeDeadTree02" prob="0.006" rotatemax="7"/>
				<decoration type="prefab" name="deco_remnant_wood_01" prob=".0009"/>
				<decoration type="prefab" name="deco_remnant_wood_02" prob=".0009"/>
				<decoration type="block" blockname="emberPileDeco1" prob="0.001" rotatemax="7"/>
				<decoration type="block" blockname="emberPileDeco2" prob="0.001" rotatemax="7"/>
				<decoration type="block" blockname="emberPileDeco3" prob="0.01" rotatemax="7"/>
				<decoration type="block" blockname="emberPileDeco4" prob="0.01" rotatemax="7"/>
				<decoration type="block" blockname="treeBrownGrassDiagonal" prob=".02"/>
				<decoration type="block" blockname="treeStump" prob=".0002" rotatemax="7"/>

				<decoration type="block" blockname="rubblePileWoodBurntLarge" prob=".0004" rotatemax="7"/>
				<decoration type="block" blockname="rubblePileWoodBurntSmall" prob=".0004" rotatemax="7"/>
			</decorations>
		</subbiome>
</append>
